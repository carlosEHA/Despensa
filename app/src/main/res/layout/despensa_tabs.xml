<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/tab_medal_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="onMedalClick"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_medal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/producto"
            android:textAllCaps="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_ranking_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="onRankingClick">

        <TextView
            android:id="@+id/tab_ranking_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/gasto"
            android:textAllCaps="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_avatar_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="onAvatarClick">

        <TextView
            android:id="@+id/tab_avatar_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/tarea"
            android:textAllCaps="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
